
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DEVOPSYS_SAFE=true
DEVOPSYS_MONITOR_SOURCES=top,df,vmstat,free,uptime
DEVOPSYS_MONITOR_INTERVAL=30
OPENAI_API_KEY=

# Logging
DEVOPSYS_LOG_LEVEL=INFO        # DEBUG|INFO|WARNING|ERROR
DEVOPSYS_LOG_FILE=devopsys.log # путь к файлу или пусто
DEVOPSYS_LOG_CONSOLE=true      # лог в консоль
DEVOPSYS_LOG_TO_TELEGRAM=false # слать ключевые события в Telegram

# Exec streaming config
DEVOPSYS_EXEC_STREAM=true      # потоковое обновление вывода команд в Telegram
DEVOPSYS_EXEC_CHUNK_LINES=10   # сколько строк копить перед редактированием сообщения
DEVOPSYS_EXEC_EDIT_MS=1200     # как часто редактировать сообщение (мс)
DEVOPSYS_SUDO_NONINTERACTIVE=true  # добавлять 'sudo -n' для запрета интерактивного пароля
